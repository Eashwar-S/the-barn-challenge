Bootstrap: docker
From: ubuntu:18.04


%setup
    mkdir -p jackal_ws/src


%files
    . jackal_ws/src/the-barn-challenge

%post
    export DEBIAN_FRONTEND=noninteractive
    apt-get update && apt-get install -y \
        lsb-release \
        curl \
        gnupg2 \
        software-properties-common \
        sudo
    echo "deb http://packages.ros.org/ros/ubuntu $(lsb_release -sc) main" > /etc/apt/sources.list.d/ros-latest.list
    curl -s https://raw.githubusercontent.com/ros/rosdistro/master/ros.key | apt-key add -
    apt-get update
    apt-get install -y ros-melodic-desktop-full
    apt-get install -y python-rosdep python-rosinstall python-rosinstall-generator python-wstool build-essential
    rosdep init || true
    rosdep update || true
    apt-get install -y ros-melodic-jackal-simulator ros-melodic-jackal-desktop ros-melodic-jackal-gazebo
    apt-get install -y ros-melodic-map-server ros-melodic-navigation
    echo "source /opt/ros/melodic/setup.bash" >> ~/.bashrc
    apt-get update
    apt-get install -y python3 python3-pip
    pip3 install defusedxml rospkg netifaces numpy scikit-learn scipy filterpy matplotlib
    cd jackal_ws/src
    git clone https://github.com/jackal/jackal.git --branch melodic-devel
    git clone https://github.com/jackal/jackal_simulator.git --branch melodic-devel
    git clone https://github.com/jackal/jackal_desktop.git --branch melodic-devel
    git clone https://github.com/utexas-bwi/eband_local_planner.git
    cd  ..
    apt-get update
    apt-get install -y ros-melodic-gmapping ros-melodic-sick-tim ros-melodic-rosdoc-lite
    /bin/bash -c "source /opt/ros/melodic/setup.bash && rosdep install -y --from-paths . --ignore-src --rosdistro=melodic"
    /bin/bash -c "source /opt/ros/melodic/setup.bash && catkin_make"
    /bin/bash -c "source devel/setup.bash"
    
%environment
    export ROS_DISTRO=melodic
    export ROS_VERSION=1